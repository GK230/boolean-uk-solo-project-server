// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")

}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  username     String     @unique
  password     String
  avatar       String?
  totalCredits Int
  Purchase     Purchase[]
  Item         Item[]
  Review       Review[]
}

model Purchase {
  id      Int      @id @default(autoincrement())
  userId  Int
  date    DateTime @default(now())
  credits Int
  image   String?
  user    User     @relation(fields: [userId], references: [id])
  itemId  Int
  Item    Item     @relation(fields: [itemId], references: [id])
}

model Item {
  id          Int        @id @default(autoincrement())
  userId      Int
  credits     Int
  image       String
  title       String
  description String
  purchase    Purchase?
  itemTypes   ItemType[]
  brand       Brand?     @relation(fields: [brandId], references: [id])
  brandId     Int
  User        User?      @relation(fields: [userId], references: [id])
  Review      Review?
}

model Review {
  id     Int    @id @default(autoincrement())
  userId Int
  itemId Int
  review String
  user   User   @relation(fields: [userId], references: [id])
  item   Item   @relation(fields: [itemId], references: [id])

}

model ItemType {
  id             Int    @id @default(autoincrement())
  name           String
  creditModifier Int
  items          Item[]
}

model Brand {
  id             Int    @id @default(autoincrement())
  name           String
  creditModifier Int
  item           Item[]
}
